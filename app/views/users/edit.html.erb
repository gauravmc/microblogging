<% provide :title, "Edit user" %> 
<h1>Edit user</h1>
<br/>

<%= render 'shared/error_messages' %>
<div id="signup-form-container">
<%= form_for(@user) do |f| %>

	<%= render 'form', f: f %>
  <div class="actions">
    <%= f.submit "Update", class: "btn-primary" %>
