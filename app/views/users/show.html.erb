<% provide :title, @user.name %>
<table class="table-condensed profile">
  <tr>
    <td class="main">
       <h2><%= gravatar_for @user %>
       <%= @user.name %></h2>
    </td>
    <td class="sidebar">
      <strong>Name</strong> <%= @user.name %><br />
      <strong>URL</strong>  <%= link_to user_path(@user), @user %>
    </td>
  </tr>
</table>